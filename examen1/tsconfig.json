{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "/node_modules/@types"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],  // Asegúrate de que todos los archivos TS estén incluidos
  "exclude": ["node_modules"]  // Excluye node_modules
}
